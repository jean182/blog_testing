<h3>Tags</h3>
<% Tag.all.each do |tag| %>
  <% if @post.tags.include?(tag) %>
    <h3 style="display:inline;">
      <span style="background-color: <%= tag.color %>" class="badge badge-secondary">
        <%= link_to tag.name, tag, class: 'link-unstyled' %>
      </span>
    </h3>
  <% end %>
<% end %>
