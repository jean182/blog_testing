<%= form_with(model: @post) do |form| %>

  <%= render 'shared/errors', object: @post %>
  <%= hidden_field_tag 'post[category_ids][]', nil %>
  <% Category.all.each do |category| %>
    <div class="form-check form-check-inline">
      <%= check_box_tag 'post[category_ids][]', category.id, @post.categories.include?(category), id: dom_id(category), class: "form-check-input", type: "checkbox" %>
      <%= label_tag dom_id(category), category.name, class: "form-check-label"%>
    </div>
  <% end %>
  <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control", placeholder: "Title" %>
  </div>
  <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, :class => "tinymce", rows: 5, cols: 25  %>
  </div>
  <div class="actions">
    <%= form.submit "Send", class: "btn btn-primary" %>
  </div>
<% end %>

<%= tinymce %>