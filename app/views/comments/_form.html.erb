<%= form_with(model: [ @post, @post.comments.build ], local: true) do |form| %>

    <%= render 'shared/errors', object: @post.comments.build %>
    <div class="form-group">
        <%= form.label :commenter %><br>
        <%= form.text_field :commenter, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :body %><br>
        <%= form.text_area :body, class: "form-control", placeholder: "Write your comment here" %>
    </div>
    <div class="action">
        <%= form.submit "Share", class: "btn btn-primary" %>
    </div>
<% end %>